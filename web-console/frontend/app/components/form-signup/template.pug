include /app/helpers/jade/mixins

.form-signup__grid(ng-form='signup' ng-ref='$ctrl.innerForm' ng-ref-read='form')
    .span-2
        +form-field__email({
            label: 'Email:',
            model: '$ctrl.ngModel.$viewValue.email',
            name: '"email"',
            placeholder: 'signupFormComponent.emailInput.placeholder',
            required: true
        })(
            ng-model-options='{allowInvalid: true}'
            autocomplete='email'
            ignite-auto-focus
        )
            +form-field__error({error: 'server', message: `{{$ctrl.serverError}}`})
    .span-1
        +form-field__password({
            label: 'Password:',
            model: '$ctrl.ngModel.$viewValue.password',
            name: '"password"',
            placeholder: 'signupFormComponent.passwordInput.placeholder',
            required: true
        })(
            autocomplete='new-password'
        )
    .span-1
        +form-field__password({
            label: 'Confirm:',
            model: 'confirm',
            name: '"confirm"',
            placeholder: 'signupFormComponent.confirmPasswordInput.placeholder',
            required: true
        })(
            ignite-match='$ctrl.ngModel.$viewValue.password'
            autocomplete='off'
        )
    .span-1
        +form-field__text({
            label: 'First name:',
            model: '$ctrl.ngModel.$viewValue.firstName',
            name: '"firstName"',
            placeholder: 'signupFormComponent.firstNameInput.placeholder',
            required: true
        })(
            autocomplete='given-name'
        )
    .span-1
        +form-field__text({
            label: 'Last name:',
            model: '$ctrl.ngModel.$viewValue.lastName',
            name: '"lastName"',
            placeholder: 'signupFormComponent.lastNameInput.placeholder',
            required: true
        })(
            autocomplete='family-name'
        )
    .span-1
        +form-field__phone({
            label: 'Phone:',
            model: '$ctrl.ngModel.$viewValue.phone',
            name: '"phone"',
            placeholder: 'signupFormComponent.phoneInput.placeholder',
            optional: true
        })(
            autocomplete='tel'
        )
    .span-1
        +form-field__dropdown({
            label: 'Country/Region:',
            model: '$ctrl.ngModel.$viewValue.country',
            name: '"country"',
            required: true,
            placeholder: 'signupFormComponent.countryInput.placeholder',
            options: '$ctrl.countries'
        })(
            autocomplete='country'
        )
    .span-2
        +form-field__text({
            label: 'Company:',
            model: '$ctrl.ngModel.$viewValue.company',
            name: '"company"',
            placeholder: 'signupFormComponent.companyInput.placeholder',
            required: true
        })(
            ignite-on-enter-focus-move='countryInput'
            autocomplete='organization'
        )
