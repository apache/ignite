

button.btn-ignite.btn-ignite--primary(
    ng-click='$ctrl.boundActions[0].click()'
    type='button'
    ng-disabled='!$ctrl.boundActions[0].click'
)
    | {{ ::$ctrl.boundActions[0].text }}
