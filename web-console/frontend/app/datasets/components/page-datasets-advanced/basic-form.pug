
.pca-form-row
    .pca-form-column-6.pc-form-grid-row        

        .pc-form-grid-col-30
            +form-field__text({
                label: 'Cluster Name:',
                model: `${model}.name`,
                readOnly: true,
                name: '"name"',
                placeholder: ''
            })

        .pc-form-grid-col-30
            +form-field__text({
                label: 'Default database:',
                model: `${model}.schemaName`,
                name: '"schemaName"',
                placeholder: 'public'
            })
        
        .pc-form-grid-col-30
            +form-field__text({
                label: 'Mongo URL:',
                model: `${model}.jdbcUrl`,
                name: '"jdbcUrl"',                        
                placeholder: 'mongodb://'
            })    
          
        .pc-form-grid-col-30
            +form-field__text({
                label: 'Mongo Admin URL:',
                model: `${model}.crudui_web_url`,
                name: '"crudui_web_url"',                        
                placeholder: 'http://'
            })         
            
        .pc-form-grid-col-30
            +form-field__text({
                label: 'User name:',
                model: `${model}.userName`,
                name: '"userName"'
            })
            
        .pc-form-grid-col-30
            +form-field__password({
                label: 'Password:',
                model: `${model}.password`,
                name: '"password"'
            })