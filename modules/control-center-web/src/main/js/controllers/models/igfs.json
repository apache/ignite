          "type": "text",
          "path": "ipcEndpointConfiguration",
          "model": "tokenDirectoryPath",
          "placeholder": "ipc/shmem",
          "hide": "!backupItem.ipcEndpointEnabled",
          "tip": [
            "Directory where shared memory tokens are stored"
          ]
        }
