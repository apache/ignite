  "general": [
    {
      "label": "General",
      "group": "general",
      "tip": [
        "IGFS properties"
      ],
      "fields": [
        {
          "label": "Name",
          "id": "igfsName",
          "type": "text",
          "model": "name",
          "required": true,
          "placeholder": "Input name"
        },
        {
          "label": "Clusters",
          "id": "clusters",
          "type": "dropdown-multiple",
          "model": "clusters",
          "placeholder": "Choose clusters",
          "placeholderEmpty": "No clusters configured",
