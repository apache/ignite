<!-- 

Creating NuGet package:
1) Build Apache.Ignite.sln (AnyCPU configuration)
2) Create package (use csproj instead of nuspec so that template substitution works): 
   nuget pack Apache.Ignite.EntityFramework.csproj -Prop Configuration=Release -Prop Platform=AnyCPU

-->

<package >
    <metadata>
        <id>GridGain.Ignite.EntityFramework</id>
        <title>GridGain Ignite Entity Framework Integration</title>
        <!-- -->
        <version>$version$</version>
        <authors>GridGain</authors>
        <owners>GridGain</owners>
        <licenseUrl>https://www.gridgain.com/products/software/community-edition/gridgain-community-edition-license</licenseUrl>
        <projectUrl>https://gridgain.com/</projectUrl>
        <iconUrl>https://www.gridgain.com/sites/default/files/GG-logo64-01.png</iconUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>
GridGain Ignite EntityFramework Second Level Cache: caches EF query results in a distributed in-memory cache.
            
More info: https://docs.gridgain.com/
        </description>
        <summary>
            GridGain Ignite EntityFramework Integration
        </summary>
        <copyright>Copyright 2019</copyright>
        <tags>EntityFramework Second-Level GridGain Ignite In-Memory Distributed Computing SQL NoSQL Grid Map Reduce Cache</tags>
        <dependencies>
            <dependency id="GridGain.Ignite" version="[$version$]" />
            <dependency id="EntityFramework" version="[6.1.0,7.0.0)" />
        </dependencies>    
    </metadata>
    <files>
	    <file src="bin\$configuration$\Apache.Ignite.EntityFramework.dll" target="lib\net40" />
		<file src="bin\$configuration$\Apache.Ignite.EntityFramework.xml" target="lib\net40" />
    </files>
</package>
