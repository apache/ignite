<RuleSet Name="Rules for Apache.Ignite.Core" Description="Code analysis rules for Apache.Ignite.Core.csproj." ToolsVersion="14.0">
  <Include Path="Apache.Ignite.ruleset" Action="Default" />
  <Rules AnalyzerId="Microsoft.Analyzers.ManagedCodeAnalysis" RuleNamespace="Microsoft.Rules.Managed">

    <!-- Class never instantiated. -->
    <Rule Id="CA1812" Action="None" />

    <!-- Member can be marked static. -->
    <Rule Id="CA1822" Action="None" />

    <!-- Class owns disposable fields but is not disposable. -->
    <Rule Id="CA1001" Action="None" />

    <!-- Do not declare visible instance fields. -->
    <Rule Id="CA1051" Action="None" />

    <!-- Non-constant fields should not be visible. -->
    <Rule Id="CA2211" Action="None" />

    <!-- Exceptions should have constructors. -->
    <Rule Id="CA1032" Action="None" />

    <!-- Exceptions should be serializable. -->
    <Rule Id="CA2237" Action="None" />

    <!-- Unused field. -->
    <Rule Id="CA1823" Action="None" />

    <!-- Properties should not return arrays. -->
    <Rule Id="CA1819" Action="None" />

    <!-- ToLower locale. -->
    <Rule Id="CA1304" Action="None" />

    <!-- Validate arguments of public methods. -->
    <Rule Id="CA1062" Action="None" />

    <!-- Do not catch general exception types. -->
    <Rule Id="CA1031" Action="None" />

    <!-- Do not nest types. -->
    <Rule Id="CA1034" Action="None" />

  </Rules>
</RuleSet>
