<RuleSet Name="Rules for Apache.Ignite.Core" Description="Code analysis rules for Apache.Ignite.Core.csproj." ToolsVersion="14.0">
  <Include Path="Apache.Ignite.ruleset" Action="Default" />
  <Rules AnalyzerId="Microsoft.Analyzers.ManagedCodeAnalysis" RuleNamespace="Microsoft.Rules.Managed">

    <!-- Class never instantiated. -->
    <Rule Id="CA1812" Action="None" />

    <!-- Member can be marked static. -->
    <Rule Id="CA1822" Action="None" />

    <!-- Class owns disposable fields but is not disposable. -->
    <Rule Id="CA1001" Action="None" />

    <!-- Do not declare visible instance fields. -->
    <Rule Id="CA1051" Action="None" />

    <!-- Non-constant fields should not be visible. -->
    <Rule Id="CA2211" Action="None" />

    <!-- Exceptions should have constructors. -->
    <Rule Id="CA1032" Action="None" />

    <!-- Exceptions should be serializable. -->
    <Rule Id="CA2237" Action="None" />

    <!-- Unused field. -->
    <Rule Id="CA1823" Action="None" />

    <!-- Properties should not return arrays. -->
    <Rule Id="CA1819" Action="None" />

    <!-- ToLower locale. -->
    <Rule Id="CA1304" Action="None" />

    <!-- Validate arguments of public methods. -->
    <Rule Id="CA1062" Action="None" />

    <!-- Do not catch general exception types. -->
    <Rule Id="CA1031" Action="None" />

    <!-- Do not nest types. -->
    <Rule Id="CA1034" Action="None" />

    <!-- StartsWith locale. -->
    <Rule Id="CA1310" Action="None" />

    <!-- string.Compare locale. -->
    <Rule Id="CA1307" Action="None" />

    <!-- Underscores in names. -->
    <Rule Id="CA1707" Action="None" />

    <!-- Reserved suffixes. -->
    <Rule Id="CA1710" Action="None" />

    <!-- Call Dispose. -->
    <Rule Id="CA2000" Action="None" />

    <!-- ConfigureAwait. -->
    <Rule Id="CA2007" Action="None" />

    <!-- Change to read-only. -->
    <Rule Id="CA2227" Action="None" />

    <!-- Inspections should be public. -->
    <Rule Id="CA1064" Action="None" />

    <!-- Remove static ctor. -->
    <Rule Id="CA1810" Action="None" />

    <!-- Implement IEquatable. -->
    <Rule Id="CA1066" Action="None" />

    <!-- Implement ICollection. -->
    <Rule Id="CA1010" Action="None" />

    <!-- Don't use multidimensional arrays. -->
    <Rule Id="CA1814" Action="None" />

    <!-- Use int enums. -->
    <Rule Id="CA1028" Action="None" />

    <!-- Test for empty strings correctly. -->
    <Rule Id="CA1820" Action="None" />

    <!-- Do not create tasks without passing a TaskScheduler. -->
    <Rule Id="CA2008" Action="None" />

    <!-- Do not raise exceptions in unexpected places. -->
    <Rule Id="CA1065" Action="None" />

    <!-- Type name conflicts with namespace. -->
    <Rule Id="CA1724" Action="None" />

    <!-- HRESULT or error code handling. -->
    <Rule Id="CA1806" Action="None" />

    <!-- ToLowerInvariant. -->
    <Rule Id="CA1308" Action="None" />

    <!-- Unused parameter. -->
    <Rule Id="CA1801" Action="None" />

    <!-- CancellationToken forwarding. -->
    <Rule Id="CA2016" Action="None" />

    <!-- Method and property with the same name. -->
    <Rule Id="CA1721" Action="None" />

    <!-- Use Uri instead of String. -->
    <Rule Id="CA1054" Action="None" />

    <!-- Server certificates are not validated. -->
    <Rule Id="CA5359" Action="None" />

    <!-- Unsafe LoadXml. -->
    <Rule Id="CA3075" Action="None" />

    <!-- Insecure XmlDocument. -->
    <Rule Id="CA3077" Action="None" />

  </Rules>
</RuleSet>
