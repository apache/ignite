<Configuration monitorInterval="60">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT" follow="true">
            <ThresholdFilter level="debug"/>
            <PatternLayout pattern="[%d{dd-MM-yyyy HH:mm:ss}][%-5p][%t][%c{1}] %m%n"/>
        </Console>
        
        <!-- Console Appender -->
        <Console name="Console_err" target="SYSTEM_ERR" follow="true">
            <ThresholdFilter level="ERROR"/>
            <PatternLayout pattern="[%d{dd-MM-yyyy HH:mm:ss}][%-5p][%t][%c{1}] %m%n"/>
        </Console>

        <File name="FILE"  fileName="${IGNITE_HOME}/work/log/dotnet-logger-test.log" append="true">
            <ThresholdFilter level="debug"/>
            <PatternLayout pattern="[%d{dd-MM-yyyy HH:mm:ss}][%-5p][%t][%c{1}] %m%n"/>
        </File>

    </Appenders>

    <Loggers>

        <Logger name="org.springframework" level="WARN">
        </Logger>

        <Logger name="org.eclipse.jetty" level="WARN">
        </Logger>

        <Logger name="org.eclipse.jetty.util.log" level="ERROR">
        </Logger>

        <Logger name="org.eclipse.jetty.util.component" level="ERROR">
        </Logger>

        <Logger name="com.amazonaws" level="WARN">
        </Logger>

        <Logger name="org.apache.ignite" level="DEBUG">
        </Logger>

        <Logger name="org.apache.zookeeper" level="info">
        </Logger>

        <Root level="DEBUG">
            <AppenderRef ref="Console_err"/>
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>
</Configuration>
