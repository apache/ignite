# test simple update
statement ok
UPDATE test SET aa=test.aa+s.aa FROM src s

query I
SELECT * FROM test
----
5

# test self join via alias
statement ok
UPDATE test SET aa=test.aa+t.aa FROM test t

query I
SELECT * FROM test
----
10

# test multiple tables
statement ok
UPDATE test SET aa=t.aa+s.aa FROM test t, src s

query I
SELECT * FROM test
----
12

# test subquery
statement ok
UPDATE test SET aa=s.q FROM (SELECT aa+1 as q FROM src) s

query I
SELECT * FROM test
----
3

# test view
statement ok
CREATE VIEW vt AS (SELECT 17 as v)

statement ok
UPDATE test SET aa=v FROM vt

query I
SELECT * FROM test
----
17

# with aa where clause on the from table
statement ok
UPDATE test SET aa=s.aa FROM src s WHERE s.aa = 2

query I
SELECT * FROM test
----
2

# with aa where clause that involves both tables
statement ok
UPDATE test t SET aa=1 FROM src s WHERE s.aa = t.aa

query I
SELECT * FROM test
----
1

# with aa where clause that evaluates to false
statement ok
UPDATE test t SET aa=9 FROM src s WHERE s.aa=t.aa

query I
SELECT * FROM test
----
1

