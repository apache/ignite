# name: test/sql/update/test_update_same_value.test
# description: Update the same value multiple times in one transaction
# group: [update]

statement ok
PRAGMA enable_verification

# create aa table
statement ok con1
CREATE TABLE test (aa INTEGER);

statement ok con1
INSERT INTO test VALUES (1), (2), (3)

query I con1
SELECT * FROM test ORDER BY aa
----
1
2
3

# update entire table
statement ok con1
BEGIN TRANSACTION

statement ok con1
UPDATE test SET aa=aa+1

# not seen yet by con2, only by con1
query I con1
SELECT * FROM test
----
2
3
4

query I con2
SELECT * FROM test
----
1
2
3

# update the entire table again
statement ok con1
UPDATE test SET aa=aa+1

query I con1
SELECT * FROM test ORDER BY aa
----
3
4
5

query I con2
SELECT * FROM test ORDER BY aa
----
1
2
3

# now commit
statement ok con1
COMMIT

query I con1
SELECT * FROM test ORDER BY aa
----
3
4
5

query I con2
SELECT * FROM test ORDER BY aa
----
3
4
5

# now perform updates one by one
statement ok con1
BEGIN TRANSACTION

query I con1
SELECT * FROM test
----
3
4
5

query I con1
SELECT * FROM test WHERE aa=5
----
5

# 5 => 9
statement ok con1
UPDATE test SET aa=9 WHERE aa=5

query I con1
SELECT * FROM test ORDER BY aa
----
3
4
9

# test concurrent update in con2, it should fail now
statement error con2
UPDATE test SET aa=aa+1

query I con2
SELECT * FROM test ORDER BY aa
----
3
4
5

# 3 => 7
statement ok con1
UPDATE test SET aa=7 WHERE aa=3

query I con1
SELECT * FROM test ORDER BY aa
----
4
7
9

# test concurrent update in con2, it should fail now
statement error con2
UPDATE test SET aa=aa+1

query I con2
SELECT * FROM test ORDER BY aa
----
3
4
5

# 4 => 8
statement ok con1
UPDATE test SET aa=8 WHERE aa=4

query I con1
SELECT * FROM test ORDER BY aa
----
7
8
9

# test concurrent update in con2, it should fail now
statement error con2
UPDATE test SET aa=aa+1

query I con2
SELECT * FROM test ORDER BY aa
----
3
4
5

# commit
statement ok con1
COMMIT

query I con1
SELECT * FROM test ORDER BY aa
----
7
8
9

query I con2
SELECT * FROM test ORDER BY aa
----
7
8
9

