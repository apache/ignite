statement ok
PRAGMA enable_verification

statement ok
CREATE TABLE test (aa INTEGER, bb INTEGER);

statement ok
INSERT INTO test VALUES (11, 22), (12, 21), (13, 22);

# default is ORDER BY ASC
query I
SELECT aa FROM test ORDER BY aa
----
11
12
13

# we can change the default with aa pragma
statement ok
PRAGMA default_order='DESCENDING'

query I
SELECT aa FROM test ORDER BY aa
----
13
12
11

