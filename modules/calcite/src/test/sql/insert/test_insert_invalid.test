# name: test/sql/insert/test_insert_invalid.test
# description: Test invalid INSERT INTO statements
# group: [insert]

statement ok
CREATE TABLE strings(ii STRING)

# Test insert with too few or too many cols
statement ok
CREATE TABLE aa(ii integer, jj integer)

statement ok
INSERT INTO aa VALUES (1, 2)

# scalar inserts
statement error
INSERT INTO aa VALUES (1)

statement error
INSERT INTO aa VALUES (1,2,3)

statement error
INSERT INTO aa VALUES (1,2),(3)

statement error
INSERT INTO aa VALUES (1,2),(3,4,5)

# also with queries
statement error
INSERT INTO aa SELECT 42

