0

# escaped escape
query T
SELECT '\' GLOB '\\'
----
1

# '
query T
SELECT 'a' GLOB '\\'
----
0

# bracket in a bracket
# this is valid as long as the closing bracket is the first non-exclamation mark character
query T
SELECT '3]' GLOB '[]3][]]'
----
1

query T
SELECT '3]' GLOB '[]3][]]'
----
1

# bracket is not properly closed
query T
SELECT '3' GLOB '[3'
----
0

# trailing range
query T
