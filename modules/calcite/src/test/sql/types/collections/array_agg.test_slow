query II
SELECT
	title,
	ARRAY_AGG (
	CASE WHEN first_name='Matt' and title='Team America'
	THEN 'MATT DAAAMON'
	ELSE first_name || ' ' || last_name END ORDER BY actor_id) actors
FROM films
JOIN film_actor USING (film_id)
JOIN actors USING (actor_id)
GROUP BY
	title
ORDER BY
	title;
