# name: test/sql/types/null/test_null_aggr.test
# description: Test NULL handling in aggregations
# group: [null]

statement ok
CREATE TABLE test (aa INTEGER, bb INTEGER);

statement ok
INSERT INTO test VALUES (11, 22), (NULL, 21), (13, 22)

# aggregations should ignore NULLs
query RII
SELECT SUM(aa), MIN(aa), MAX(aa) FROM test
----
24.000000	11	13

# count should ignore NULL
# * returns full table count
# counting "aa" ignores null values
query III
SELECT COUNT(*), COUNT(aa), COUNT(bb) FROM test
----
3	2	3

# with GROUP BY as well
query IIRII
SELECT bb, COUNT(aa), SUM(aa), MIN(aa), MAX(aa) FROM test GROUP BY bb ORDER BY bb
----
21	0	NULL	NULL	NULL
22	2	24.000000	11	13

# GROUP BY null value
statement ok
INSERT INTO test VALUES (12, NULL), (16, NULL)

query IIRII
SELECT bb, COUNT(aa), SUM(aa), MIN(aa), MAX(aa) FROM test GROUP BY bb ORDER BY bb
----
NULL	2	28.000000	12	16
21	0	NULL	NULL	NULL
22	2	24.000000	11	13

