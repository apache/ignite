include /app/helpers/jade/mixins

web-console-header
    web-console-header-left
        ignite-header-title

.container--responsive.body-container
    section
        - const form = '$ctrl.form'
        h3 Forgot password?
        p Enter the email address for your account & we'll email you a link to reset your password.
        form(name=form novalidate ng-submit='$ctrl.remindPassword()')
            +form-field__email({
                label: 'Email:',
                model: '$ctrl.data.email',
                name: '"email"',
                placeholder: 'Input email',
                required: true
            })(
                ng-model-options='{allowInvalid: true}'
                autocomplete='email'
                ignite-auto-focus
                tabindex='0'
            )
                +form-field__error({error: 'server', message: `{{$ctrl.serverError}}`})
            footer.form-footer
                a(ui-sref='signin') Back to sign in
                button.btn-ignite.btn-ignite--primary(
                    tabindex='1'
                    type='submit'
                ) Send it to me

web-console-footer
