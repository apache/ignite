            </dependency>
        </dependencies>
    </dependencyManagement>

    <!-- The Plugins, Plugin Management and Build sections will be removed from the flattened BOM deployed to a repository. -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>flatten</id>
                        <configuration>
                            <flattenMode>bom</flattenMode>
                            <pomElements>
                                <dependencyManagement>resolve</dependencyManagement>
                            </pomElements>
                        </configuration>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>flatten</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
